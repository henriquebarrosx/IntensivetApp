{
    "expo": {
        "version": "1.0.0",
        "slug": "intensivet-react-app",
        "icon": "./assets/logo-icon.png",
        "name": "Intensivet Saúde Digital",
        "jsEngine": "hermes",
        "splash": {
            "resizeMode": "contain",
            "backgroundColor": "#ffffff",
            "image": "./assets//splash.png"
        },
        "notification": {
            "icon": "./assets/logo-icon.png"
        },
        "assetBundlePatterns": [
            "**/*"
        ],
        "plugins": [
            [
                "expo-document-picker",
                {
                    "appleTeamId": "SK8DM654PP"
                }
            ],
            [
                "expo-image-picker",
                {
                    "photosPermission": "Permitir Intensivet Saúde Digital acessar sua câmera & fotos da galeria."
                }
            ],
            [
                "expo-camera",
                {
                    "cameraPermission": "Permitir Intensivet Saúde Digital acessar sua câmera."
                }
            ]
        ],
        "android": {
            "useNextNotificationsApi": true,
            "permissions": [
                "android.permission.CAMERA",
                "android.permission.RECEIVE_BOOT_COMPLETED",
                "android.permission.RECORD_AUDIO",
                "android.permission.READ_EXTERNAL_STORAGE",
                "android.permission.WRITE_EXTERNAL_STORAGE"
            ],
            "adaptiveIcon": {
                "foregroundImage": "./assets/logo-icon.png",
                "backgroundColor": "#FFFFFF"
            },
            "versionCode": 1,
            "googleServicesFile": "./google-services.json"
        },
        "ios": {
            "jsEngine": "hermes",
            "buildNumber": "2.0.0",
            "supportsTablet": true,
            "usesIcloudStorage": true,
            "entitlements": {
                "com.apple.developer.networking.wifi-info": true
            },
            "infoPlist": {
                "NSCameraUsageDescription": "Nós precisamos disso para que você possa compartilhar arquivos com outros veterinários"
            }
        }
    }
}